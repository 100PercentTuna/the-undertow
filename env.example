# ============================================================
# The Undertow - Configuration
# ============================================================
# Copy this file to .env and fill in your values

# ------------------------------------------------------------
# AI Provider (Required)
# ------------------------------------------------------------
# Get your key from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Optional: OpenAI as fallback
# Get your key from: https://platform.openai.com
OPENAI_API_KEY=

# ------------------------------------------------------------
# Email (Required for newsletter - FREE with Gmail)
# ------------------------------------------------------------
# Gmail SMTP Settings (FREE - 500 emails/day limit)
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use that App Password (16 characters) as SMTP_PASSWORD

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
SMTP_USE_TLS=true

# Your Gmail address (must match SMTP_USERNAME)
FROM_EMAIL=your-email@gmail.com

# Comma-separated list of recipients
NEWSLETTER_RECIPIENTS=you@email.com,friend@email.com

# Alternative: Use any SMTP server (Outlook, custom, etc.)
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@outlook.com
# SMTP_PASSWORD=your-password

# ------------------------------------------------------------
# Database (Don't change for Lightsail setup)
# ------------------------------------------------------------
DATABASE_URL=postgresql://undertow:undertow123@localhost:5432/undertow
REDIS_URL=redis://localhost:6379/0

# ------------------------------------------------------------
# Schedule
# ------------------------------------------------------------
# Pipeline starts at 8:30 PM UTC = 4:30 AM SGT (next day)
PIPELINE_START_HOUR=20
PIPELINE_START_MINUTE=30

# ------------------------------------------------------------
# Cost Control
# ------------------------------------------------------------
# Daily budget in USD (pipeline stops if exceeded)
DAILY_BUDGET=1.50

# ------------------------------------------------------------
# Environment
# ------------------------------------------------------------
# Options: development, staging, production
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO
